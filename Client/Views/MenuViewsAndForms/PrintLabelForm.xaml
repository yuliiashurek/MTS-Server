<Window x:Class="Client.Views.PrintLabelForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:Client.Models"
        Title="Налаштування друку" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <DockPanel Margin="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Поля -->
                <RowDefinition Height="Auto" />
                <!-- Кнопки -->
            </Grid.RowDefinitions>

            <!-- Поля вводу -->
            <StackPanel Grid.Row="0">

                <TextBlock Text="Режим друку:" Margin="0,0,0,5" />
                <ComboBox x:Name="PrintModeComboBox" SelectedIndex="0" Margin="0,0,0,10">
                    <ComboBoxItem Content="Тільки штрихкод" Tag="{x:Static enums:PrintMode.BarcodeOnly}" />
                    <ComboBoxItem Content="Штрихкод і текст" Tag="{x:Static enums:PrintMode.BarcodeAndText}" />
                </ComboBox>

                <TextBlock Text="Кількість копій:" Margin="0,0,0,5" />
                <TextBox x:Name="CopiesTextBox" Text="1" Margin="0,0,0,10" />
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Друк" Width="80" Margin="0,0,10,0" Click="PrintButton_Click" />
                <Button Content="Скасувати" Width="80" Click="CancelButton_Click" />
            </StackPanel>

        </Grid>

    </DockPanel>
</Window>
