<Window x:Class="Client.MeasurementUnitForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Одиниця вимірювання" Height="220" Width="400" WindowStartupLocation="CenterOwner"
        SizeToContent="Height" ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Повна назва" Grid.Row="0" Margin="0,5"/>
        <TextBox x:Name="FullNameBox" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Скорочена назва" Grid.Row="2"/>
        <TextBox x:Name="ShortNameBox" Grid.Row="3" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Зберегти" Margin="5" Click="Save_Click" Width="100"/>
            <Button Content="Скасувати" Margin="5" Click="Cancel_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
