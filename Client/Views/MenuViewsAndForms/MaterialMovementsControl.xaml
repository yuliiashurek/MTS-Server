<!-- Виправлений XAML з поверненням підвалу -->
<UserControl x:Class="Client.Views.MaterialMovementsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Client.ViewModels"
             xmlns:local="clr-namespace:Client.Helpers"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:MaterialMovementViewModel}">

    <UserControl.Resources>
        <local:MaterialNameMultiConverter x:Key="MaterialNameMultiConverter"/>
        <local:WarehouseNameMultiConverter x:Key="WarehouseNameMultiConverter"/>
        <local:MovementTypeToStringConverter x:Key="MovementTypeToStringConverter"/>
        <local:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:CategoryNameMultiConverter x:Key="CategoryNameMultiConverter"/>
        <local:MeasurementUnitNameMultiConverter x:Key="MeasurementUnitNameMultiConverter"/>
        <local:MinStockWithUnitMultiConverter x:Key="MinStockWithUnitMultiConverter"/>
        <local:MovementTypeToArrowConverter x:Key="MovementTypeToArrowConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:MaterialMovementViewModel />
    </UserControl.DataContext>

    <DockPanel Margin="20">

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ Додати" Command="{Binding AddMaterialMovementCommand}" Width="120" Margin="0,0,10,0"/>
            <Button Content="🔄 Оновити" Command="{Binding LoadAllDataCommand}" Width="120"/>
            <Button Content="⬇️ Списати за Barcode" Command="{Binding WriteOffByBarcodeCommand}" Width="160" Margin="10,0,0,0"/>

        </StackPanel>

        <!-- Панель фільтрів (під кнопками) -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Категорія" FontSize="12" FontWeight="Bold" Margin="0,0,0,2" />
                <ComboBox Width="200" IsEditable="True" DisplayMemberPath="Name"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategoryFilter, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Склад" FontSize="12" FontWeight="Bold" Margin="0,0,0,2" />
                <ComboBox Width="200" IsEditable="True" DisplayMemberPath="Name"
                          ItemsSource="{Binding Warehouses}"
                          SelectedItem="{Binding SelectedWarehouseFilter, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Grid.Column="4">
                <TextBlock Text="Постачальник" FontSize="12" FontWeight="Bold" Margin="0,0,0,2" />
                <ComboBox Width="200" IsEditable="True" DisplayMemberPath="Name"
                          ItemsSource="{Binding Suppliers}"
                          SelectedItem="{Binding SelectedSupplierFilter, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>

        <!-- Таблиця + підвал -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Таблиця -->
            <DataGrid Grid.Row="0"
                      ItemsSource="{Binding FilteredMaterialMovements}"
                      SelectedItem="{Binding SelectedMaterialMovement}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      RowHeight="35"
                      ColumnHeaderHeight="35"
                      FontSize="14"
                      SelectionMode="Single"
                      Margin="0">
                <!-- Стовпці -->
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Матеріал" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource MaterialNameMultiConverter}">
                                            <Binding Path="MaterialItemId" />
                                            <Binding Path="DataContext.MaterialItems" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Склад" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource WarehouseNameMultiConverter}">
                                            <Binding Path="WarehouseId" />
                                            <Binding Path="DataContext.Warehouses" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Рух" Binding="{Binding MovementType, Converter={StaticResource MovementTypeToArrowConverter}}" />
                    <DataGridTextColumn Header="Кількість" Binding="{Binding Quantity}" Width="1*" />
                    <DataGridTextColumn Header="Ціна" Binding="{Binding PricePerUnit}" Width="1*" />
                    <DataGridTextColumn Header="Дата руху" Binding="{Binding MovementDate, StringFormat=d}" Width="1.5*" />
                    <DataGridTextColumn Header="Expiration" Binding="{Binding ExpirationDate, StringFormat=d}" Width="1.5*" />
                    <DataGridTemplateColumn Header=" " Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏️" Padding="4" Margin="2"
                                        Command="{Binding DataContext.EditMaterialMovementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header=" " Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="❌" Padding="4" Margin="2"
                                        Command="{Binding DataContext.DeleteMaterialMovementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header=" " Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🏷️" Padding="4" Margin="2"
                                        Command="{Binding DataContext.PrintLabelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Повернутий підвал -->
            <Border Grid.Row="1"
                    Margin="0,10,0,0"
                    Padding="15"
                    Background="#FAFAFA"
                    BorderThickness="1"
                    BorderBrush="#DDD"
                    CornerRadius="8"
                    Visibility="{Binding SelectedMaterialMovement, Converter={StaticResource ObjectToVisibilityConverter}}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Ліва частина -->
                    <StackPanel Grid.Column="0" Margin="10,0,20,0" VerticalAlignment="Top">
                        <TextBlock Text="Інформація про рух матеріалу" FontWeight="Bold" FontSize="14" Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding SelectedMaterialMovement.Quantity, StringFormat=Кількість: {0:F2}}" Margin="0,2" FontSize="13"/>
                        <TextBlock Text="{Binding SelectedMaterialMovement.PricePerUnit, StringFormat=Ціна: {0:F2}}" Margin="0,2" FontSize="13"/>
                        <TextBlock Text="{Binding SelectedMaterialMovement.MovementDate, StringFormat=Дата руху: {0:d}}" Margin="0,2" FontSize="13"/>
                        <TextBlock Text="{Binding SelectedMaterialMovement.ExpirationDate, StringFormat=Expiration: {0:d}}" Margin="0,2" FontSize="13"/>
                        <TextBlock Text="{Binding SelectedMaterialMovement.BarcodeNumber, StringFormat=Barcode: {0:d}}" Margin="0,2" FontSize="13"/>
                        <TextBlock Margin="0,2" FontSize="13">
                            <TextBlock.Text>
                                <Binding Path="SelectedMaterialMovement.MovementType">
                                    <Binding.Converter>
                                        <local:MovementTypeToStringConverter/>
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>

                    <!-- Центр -->
                    <StackPanel Grid.Column="1" Margin="10,0,20,0" VerticalAlignment="Top">
                        <TextBlock Text="Інформація про матеріал" FontWeight="Bold" FontSize="14" Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding SelectedMaterialItem.Name, StringFormat=Назва: {0}}" Margin="0,2" FontSize="13"/>
                        <TextBlock Margin="0,2" FontSize="13">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource MinStockWithUnitMultiConverter}">
                                    <Binding Path="SelectedMaterialItem.MinimumStock" />
                                    <Binding Path="SelectedMaterialItem.MeasurementUnitId" />
                                    <Binding Path="MeasurementUnits" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Margin="0,2" FontSize="13">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource CategoryNameMultiConverter}">
                                    <Binding Path="SelectedMaterialItem.CategoryId" />
                                    <Binding Path="Categories" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>

                    <!-- Права частина -->
                    <StackPanel Grid.Column="2" Margin="10,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="Постачальник" FontWeight="Bold" FontSize="14" Margin="0,0,0,6"/>
                        <Border Background="White" BorderBrush="#EEE" BorderThickness="1" CornerRadius="6" Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedSupplier.Name, StringFormat=Назва: {0}}" Margin="0,2" FontSize="13"/>
                                <TextBlock Text="{Binding SelectedSupplier.ContactPerson, StringFormat=Контактна особа: {0}}" Margin="0,2" FontSize="13"/>
                                <TextBlock Text="{Binding SelectedSupplier.Phone, StringFormat=Телефон: {0}}" Margin="0,2" FontSize="13"/>
                                <TextBlock Text="{Binding SelectedSupplier.Email, StringFormat=Email: {0}}" Margin="0,2" FontSize="13"/>
                                <TextBlock Text="{Binding SelectedSupplier.Address, StringFormat=Адреса: {0}}" Margin="0,2" FontSize="13"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
