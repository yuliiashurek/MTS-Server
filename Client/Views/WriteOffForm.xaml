<hc:Window x:Class="Client.Views.WriteOffForm"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           Title="Списати матеріал"
           Width="400" Height="200"
           WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="{Binding SourceMovement.BarcodeNumber, StringFormat=Barcode: {0}}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Кількість:" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Quantity}" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Дата списання:" Width="100" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding MovementDate}" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Скасувати" Width="100" Margin="0,0,5,0" Click="Cancel_Click"/>
            <Button Content="Списати" Width="100" Command="{Binding ConfirmWriteOffCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </StackPanel>
</hc:Window>
