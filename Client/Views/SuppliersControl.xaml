<UserControl x:Class="Client.Views.SuppliersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:properties="clr-namespace:Client.Properties"
             Height="Auto" Width="Auto">

    <DockPanel>

        <!-- Верхній блок: додати + фільтри -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- кнопка + інпути -->
                <RowDefinition Height="Auto"/>
                <!-- фільтри -->
                <RowDefinition Height="*"/>
                <!-- таблиця -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <!-- Кнопка Додати -->
            <Button Content="{x:Static properties:Resources.PlusAdd}"
                    Grid.Row="0" Grid.Column="0"
                    Width="100"
                    Margin="0,0,5,5"
                    HorizontalAlignment="Left"
                    Click="AddNew_Click"/>

            <!-- Фільтри -->
            <TextBox x:Name="NameFilterBox" Grid.Row="1" Grid.Column="0" Margin="2" Height="28" VerticalContentAlignment="Center"/>
            <TextBox x:Name="ContactFilterBox" Grid.Row="1" Grid.Column="1" Margin="2" Height="28" VerticalContentAlignment="Center"/>
            <TextBox x:Name="PhoneFilterBox" Grid.Row="1" Grid.Column="2" Margin="2" Height="28" VerticalContentAlignment="Center"/>
            <TextBox x:Name="EmailFilterBox" Grid.Row="1" Grid.Column="3" Margin="2" Height="28" VerticalContentAlignment="Center"/>
            <TextBox x:Name="AddressFilterBox" Grid.Row="1" Grid.Column="4" Margin="2" Height="28" VerticalContentAlignment="Center"/>
            <Button Content="🔍" Grid.Row="1" Grid.Column="5" Margin="2" Height="28" ToolTip="{x:Static properties:Resources.SuppliersControlApplyFilter}" Click="ApplyFilters_Click"/>
            <Button Content="♻️" Grid.Row="1" Grid.Column="6" Margin="2" Height="28" ToolTip="{x:Static properties:Resources.SuppliersControlClearFilter}" Click="ClearFilters_Click"/>
            

            <!-- Таблиця -->
            <DataGrid x:Name="SuppliersGrid"
                      Grid.Row="2"
                      Grid.ColumnSpan="7"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static properties:Resources.SupplierFormNameLabel}" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="{x:Static properties:Resources.SupplierFormContactPersonLabel}" Binding="{Binding ContactPerson}" Width="*" />
                    <DataGridTextColumn Header="{x:Static properties:Resources.SupplierFormPhoneNumberLabel}" Binding="{Binding Phone}" Width="*" />
                    <DataGridTextColumn Header="{x:Static properties:Resources.SupplierFormEmailLabel}" Binding="{Binding Email}" Width="*" />
                    <DataGridTextColumn Header="{x:Static properties:Resources.SupplierFormAddressLabel}" Binding="{Binding Address}" Width="*" />
                    <DataGridTemplateColumn Header="{x:Static properties:Resources.EditButton}" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏️" Click="Edit_Click" Padding="2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="{x:Static properties:Resources.DeleteButton}" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="❌" Click="Delete_Click" Padding="2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
