<UserControl x:Class="Client.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client"
             xmlns:properties="clr-namespace:Client.Properties"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:MainViewViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ліва панель -->
        <Grid Grid.Column="0" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Верхня частина -->
            <StackPanel Margin="10" Grid.Row="0">
                <TextBlock Text="⚙ MTS" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <Rectangle Height="1" Fill="#AAA" Margin="0,0,0,10"/>

                <TextBlock FontSize="14" Margin="0,5">
                        <Run Text="📊 "/>
                        <Run Text="{x:Static properties:Resources.MainViewDashboardsMenu}"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0,5">
                        <Run Text="📝 "/>
                        <Run Text="{x:Static properties:Resources.MainViewReportingMenu}"/>
                </TextBlock>
                <Button Content="{x:Static properties:Resources.MainViewMaterialsMenu}"
    FontSize="13" Margin="0,0,0,2" Padding="0"
    Background="Transparent" BorderThickness="0"
    HorizontalAlignment="Left"
    Cursor="Hand"
    Command="{Binding MaterialItemsCommand}" />
                <Button Content="Рух матеріалів"
FontSize="13" Margin="0,0,0,2" Padding="0"
Background="Transparent" BorderThickness="0"
HorizontalAlignment="Left"
Cursor="Hand"
Command="{Binding MaterialMovementsCommand}" />
                <!--<TextBlock FontSize="14" Margin="0,5">
                        <Run Text="📦 "/>
                        <Run Text="{x:Static properties:Resources.MainViewMaterialsMenu}"/>
                </TextBlock>-->

                <Expander IsExpanded="True" Margin="0,10,0,0">
                    <Expander.Header>
                        <TextBlock FontSize="14">
                                    <Run Text="📚 "/>
                                    <Run Text="{x:Static properties:Resources.MainViewDirectoriesMenu}"/>
                        </TextBlock>
                    </Expander.Header>
                    <StackPanel Margin="15,5,0,0">
                        <Button Content="{x:Static properties:Resources.MainViewSuppliersMenu}"
                            FontSize="13" Margin="0,0,0,2" Padding="0"
                            Background="Transparent" BorderThickness="0"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Command="{Binding SuppliersCommand}" />

                        <Button Content="Одиниці вимірювання"
                            FontSize="13" Margin="0,0,0,2" Padding="0"
                            Background="Transparent" BorderThickness="0"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Command="{Binding MeasurementUnitsCommand}" />

                        <Button Content="Категорії"
                            FontSize="13" Margin="0,0,0,2" Padding="0"
                            Background="Transparent" BorderThickness="0"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Command="{Binding CategoriesCommand}" />

                         <Button Content="{x:Static properties:Resources.MainViewWarehousesMenu}"
                            FontSize="13" Margin="0,0,0,2" Padding="0"
                            Background="Transparent" BorderThickness="0"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Command="{Binding WarehousesCommand}" />

                    </StackPanel>
                </Expander>
            </StackPanel>

            <!-- Нижня частина -->
            <StackPanel Margin="10" Grid.Row="1">
                <Button Content="👤 Користувачі"
                    FontSize="13" Margin="0,4" Padding="0"
                    Background="Transparent" BorderThickness="0"
                    HorizontalAlignment="Left"
                    Cursor="Hand"
                    Command="{Binding UsersCommand}" 
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}}"/>
                <!--<TextBlock Text="⚙ Інше" FontSize="14" Margin="0,5"/>-->
                <Rectangle Height="1" Fill="#AAA" Margin="0,5"/>
                <Button Content="👤 Мій аккаунт"
                    FontSize="13" Margin="0,4" Padding="0"
                    Background="Transparent" BorderThickness="0"
                    HorizontalAlignment="Left"
                    Cursor="Hand"
                    Command="{Binding MyAccountCommand}"
                    />

            </StackPanel>
        </Grid>

        <!-- Контент + мова -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Bold"
                           VerticalAlignment="Center" DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="🌐" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Width="130"
                              ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding SelectedLanguage}"
                              VerticalContentAlignment="Center"/>
                </StackPanel>
            </DockPanel>

            <ContentControl Grid.Row="1" Content="{Binding CurrentContent}" />
        </Grid>
    </Grid>
</UserControl>
