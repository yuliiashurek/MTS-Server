<Window x:Class="Client.Views.SupplierForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Client.Properties"
        Title="{x:Static properties:Resources.SupplierFormSupplierTitle}" Height="347" Width="400" WindowStartupLocation="CenterOwner"
        MinWidth="400" MinHeight="350"
        SizeToContent="Height"
        ResizeMode="CanResize">
   
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static properties:Resources.SupplierFormNameLabel}" Grid.Row="0" Margin="0,5"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="{x:Static properties:Resources.SupplierFormContactPersonLabel}" Grid.Row="2"/>
        <TextBox x:Name="ContactBox" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="{x:Static properties:Resources.SupplierFormPhoneNumberLabel}" Grid.Row="4"/>
        <TextBox x:Name="PhoneBox" Grid.Row="5" Margin="0,0,0,10"/>

        <TextBlock Text="{x:Static properties:Resources.SupplierFormAddressLabel}" Grid.Row="6"/>
        <TextBox x:Name="EmailBox" Grid.Row="7" Margin="0,0,0,10"/>

        <TextBlock Text="{x:Static properties:Resources.SupplierFormAddressLabel}" Grid.Row="8"/>
        <TextBox x:Name="AddressBox" Grid.Row="9" Margin="0,0,0,10"/>

        <Grid Grid.Row="10" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="{x:Static properties:Resources.SaveButton}"
            Grid.Column="1"
            MinWidth="100"
            Margin="5"
            Click="Save_Click"/>

            <Button Content="{x:Static properties:Resources.CancelButton}"
            Grid.Column="2"
            MinWidth="100"
            Margin="5"
            Click="Cancel_Click"/>
        </Grid>

    </Grid>
</Window>
